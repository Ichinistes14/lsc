<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Los Santos Custom</title>
    <link rel="stylesheet" href="/css/main.css" />
    <link
      rel="icon"
      href="https://raw.githubusercontent.com/Ichinistes14/lsc/refs/heads/main/public/img/logo-lsc.ico"
      type="image/x-icon"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" style="pointer-events: none; cursor: default">
          <img src="/img/logo.svg" />
        </a>
        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" href="/gestion/home"> Employ√©s </a>
          <a class="navbar-item" href="/gestion/contrats"> Contrats </a>
          <a class="navbar-item" href="/gestion/gagnants"> Gagnants </a>
          <a class="navbar-item" href="/gestion/grades"> Grades </a>
          <a class="navbar-item has-text-weight-bold" href="/gestion/history">
            Historique
          </a>
          <a class="navbar-item" href="/gestion/logs"> Logs </a>
          <a class="navbar-item" href="/gestion/users"> Utilisateurs </a>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <a class="button is-primary" href="/">
                <strong>Retour</strong>
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>

    <div class="container has-text-centered mt-6 mb-3">
      <div class="section">
        <h1 class="title has-text-centered">Historique des Backups</h1>

        <% if (backup.length > 0) { %>
        <div class="table-container">
          <table class="table mt-4">
            <thead>
              <tr>
                <th>Date du Backup</th>
                <th>Nombre de Factures</th>
                <th>Voir</th>
              </tr>
            </thead>
            <tbody>
              <% backup.forEach(b => { %>
              <tr>
                <td><%= b.date %></td>
                <td><%= b.employeesMetrics.length %></td>
                <td>
                  <a
                    href="/gestion/history/<%= b.date %>"
                    class="button is-link"
                    >Consulter</a
                  >
                </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <p class="has-text-centered">Aucune backup disponible.</p>
        <% } %>
      </div>
    </div>
  </body>

  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</html>
